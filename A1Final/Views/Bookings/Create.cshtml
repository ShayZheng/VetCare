<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@*add date picker*@

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/bootstrap-datepicker.min.js"></script>
    <script>
        $("#datepicker").datepicker({
            "format": "yyyy/mm/dd",
            "defaultViewDate": "2021/10/5",
            "beforeShowDay": function (date) {
                if (date.getMonth() == 9) {
                    if (date.getDate() == 5) {
                        return {
                            classes: "active"
                        }
                    }
                }
            }
        })


    </script>
}
